<!DOCTYPE html>
<html class="no-js" lang="en">

	{{> head meta-title=home.meta-title meta-description=home.meta-description}}
	
	<body class="index">

		{{> browser-upgrade}}
      
        <header class="[ page-head ]">
            {{> navigation}}
            {{> subnavigation}}
        </header>
       
        {{> styleguide}}
        
        <div class="container container--content-offset--both">
           
            <h2>Components</h2>
            
            <hr class="hr-fade--fancy" />

            
            <h5>Supplementary navigation</h5>
            {{> sup-nav}}
            
            <h5>Breadcrumbs</h5>
            {{> breadcrumb}}
      
           
            <h5>Page jumps</h5>
            <h5>Pagitnation</h5>
            
            <h5>Cards</h5>
            <ul class="project-layout project-layout--tiny">
                <li class="project-layout__item u-1/4-lap-and-up ">{{> team-card}}</li>
                <li class="project-layout__item u-1/4-lap-and-up ">{{> team-card}}</li>
                <li class="project-layout__item u-1/4-lap-and-up ">{{> team-card}}</li>
                <li class="project-layout__item u-1/4-lap-and-up ">{{> team-card}}</li>
                <li class="project-layout__item u-1/4-lap-and-up ">{{> team-card}}</li>
                <li class="project-layout__item u-1/4-lap-and-up ">{{> team-card}}</li>
                <li class="project-layout__item u-1/4-lap-and-up ">{{> team-card}}</li>
                <li class="project-layout__item u-1/4-lap-and-up ">{{> team-card}}</li>
            </ul>

            
            <h5>Forms / Validation</h5>
            
            <div class="container container--small">
                <div class="form-group">
                    <select class="form-control form-control--dark select select--dark" name="" id="">
                        <option value="">United Kingdom</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control form-control--light select select--light" name="" id="">
                        <option value="">United Kingdom</option>
                    </select>    
                </div>
                <div class="form-group">
                    <label class="[ u-mb-- ] [ strong ]" for="">Label</label>
                    <input placeholder="Input field" class="form-control form-control--light" type="text">
                </div>
                <div class="form-group">
                    <label class="[ u-mb-- ] [ strong ]" for="">Label</label>
                    <input placeholder="Input field" class="form-control form-control--light form-control--focus" type="text">
                </div>
                <div class="form-group">
                    <label class="[ u-mb-- ] [ strong ]" for="">Label</label>
                    <input placeholder="Input field" class="form-control form-control--light form-control--focus error" type="text">
                    <div class="validation-text zeta">This is an error message related to the above field.</div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn--full strong" value="SUBMIT">
                </div>
            </div>
            
            
        </div>
        {{> footer}}
	</body>
</html>
